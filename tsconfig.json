{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": false,
        "pretty": true,
        "removeComments": true,
        "strictNullChecks": true,
        "lib": ["es6"],
        "types": ["node"],
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
